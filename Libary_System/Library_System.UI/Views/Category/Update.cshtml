@model Libary_System.Entities.ORM.Entities.Concrete.Category
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


    <div class="container">

        <h2>Update Category</h2>

        @using (Html.BeginForm())
        {

            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true,"",new {@class="text-danger" })

            @Html.HiddenFor(i=>i.ID)

            <div class="form-group">

                <div class="row">

                    <div class="col-md-2">

                        @Html.LabelFor(i=>i.CategoryName)
                        @Html.ValidationMessageFor(i=>i.CategoryName,"",new {@class="text-danger" })

                    </div>

                    <div class="col-md-10">


                        @Html.TextBoxFor(i=>i.CategoryName,new {@class="form-control"})


                    </div>




                </div>


            </div>

            <button type="submit" class="btn btn-dark">Update</button>





        }





    </div>

